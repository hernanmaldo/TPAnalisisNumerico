@model RaizData
<head>
    <meta charset="UTF-8">
    <title>Métodos Numéricos</title>
    <link rel="stylesheet" src=".\css\Raices.css">
</head>
<body>
        <div class="container-principal" id="conteiner-pr" style="display: flex">
            <!-- SECCIONES DE CADA MÉTODO -->
            <!-- BISECCIÓN -->
            <div class="content visible" id="biseccion">
                <div class="form-container">
                    <h2>Método de Bisección</h2>
                    <form asp-action="Calcular" method="post">
                        <label for="funcion-biseccion">Función:</label>
                        <input type="text" id="funcion-biseccion" name="Funcion" />

                        <label for="limite-inferior-biseccion">Límite inferior:</label>
                        <input type="number" id="limite-inferior-biseccion" name="LimiteInferior" step="any" />

                        <label for="limite-superior-biseccion">Límite superior:</label>
                        <input type="number" id="limite-superior-biseccion" name="LimiteSuperior" step="any" />

                        <label for="tolerancia-biseccion">Tolerancia:</label>
                        <input type="number" id="tolerancia-biseccion" name="Tolerancia" step="any" />

                        <label for="iteraciones-biseccion">Iteraciones máximas:</label>
                        <input type="number" id="iteraciones-biseccion" name="Iteraciones" />

                        <button type="submit">Calcular</button>
                    </form>
                </div>
            </div>

            <!-- REGLA FALSA -->
            <div class="content" id="regla">
                <div class="form-container">
                    <h2>Regla Falsa</h2>
                    <form>
                        <label for="funcion-regla">Función:</label>
                        <input type="text" id="funcion-regla" name="funcion-regla" placeholder="Ej: x^3 - x - 2">

                        <label for="limite-inferior-regla">Límite inferior:</label>
                        <input type="number" id="limite-inferior-regla" name="limite-inferior-regla" step="any">

                        <label for="limite-superior-regla">Límite superior:</label>
                        <input type="number" id="limite-superior-regla" name="limite-superior-regla" step="any">

                        <label for="tolerancia-regla">Tolerancia:</label>
                        <input type="number" id="tolerancia-regla" name="tolerancia-regla" step="any">

                        <label for="iteraciones-regla">Iteraciones máximas:</label>
                        <input type="number" id="iteraciones-regla" name="iteraciones-regla">
                    </form>
                </div>
            </div>

            <!-- NEWTON-RAPHSON -->
            <div class="content" id="newton">
                <div class="form-container">
                    <h2>Método de Newton-Raphson</h2>
                    <form>
                        <label for="funcion">Función:</label>
                        <input type="text" id="funcion" name="funcion" placeholder="Ej: x^2 - 4">

                        <label for="punto">Punto inicial:</label>
                        <input type="number" id="punto" name="punto" step="any">

                        <label for="tolerancia">Tolerancia:</label>
                        <input type="number" id="tolerancia" name="tolerancia" step="any">

                        <label for="iteraciones">Iteraciones máximas:</label>
                        <input type="number" id="iteraciones" name="iteraciones">
                    </form>
                </div>
            </div>

            <!-- SECANTE -->
            <div class="content" id="secante">
                <div class="form-container">
                    <h2>Método de la Secante</h2>
                    <form>
                        <label for="funcion-secante">Función:</label>
                        <input type="text" id="funcion-secante" name="funcion-secante" placeholder="Ej: x^3 - x - 2">

                        <label for="punto1-secante">Primer punto:</label>
                        <input type="number" id="punto1-secante" name="punto1-secante" step="any">

                        <label for="punto2-secante">Segundo punto:</label>
                        <input type="number" id="punto2-secante" name="punto2-secante" step="any">

                        <label for="tolerancia-secante">Tolerancia:</label>
                        <input type="number" id="tolerancia-secante" name="tolerancia-secante" step="any">

                        <label for="iteraciones-secante">Iteraciones máximas:</label>
                        <input type="number" id="iteraciones-secante" name="iteraciones-secante">
                    </form>
                </div>
            </div>





            <div class="applet-container">
               <div class="applet-graph" id="applet_container"></div>
            </div>

            @if (Model != null && Model.Raiz != 0)  // Solo si ya se calculó
            {
                <div class="resultado">
                    <h3>Resultado:</h3>
                    <p>Raíz aproximada: @Model.Raiz</p>
                </div>
            }
        </div>
</body>
</html>
<script src="https://www.geogebra.org/apps/deployggb.js"></script>
<script src="~/js/GeoGebra.js">

</script>