@model RaizData
<head>
    <meta charset="UTF-8">
    <title>Métodos Numéricos</title>
    <link rel="stylesheet" src=".\css\Raices.css">
</head>
<body>
    <div class="container-principal" id="conteiner-pr" style="display: flex">
     
        <!-- BISECCIÓN -->
        <div class="content visible" id="biseccion">
            <div class="form-container">
                <h2>Método de Bisección</h2>
                <form asp-controller="Raices" asp-action="Calcular" method="post">
                    <input type="hidden" name="metodo" value="Biseccion" />

                    <label for="funcion-biseccion">Función:</label>
                    <input type="text" id="funcion" name="Funcion" asp-for="Funcion" />
                    <span asp-validation-for="Funcion" class="text-danger"></span>

                    <label for="limite-inferior-biseccion">Límite inferior:</label>
                    <input type="number" id="limite-inferior-biseccion" name="Xi" step="any" asp-for="Xi" />
                    <span asp-validation-for="Xi" class="text-danger"></span>

                    <label for="limite-superior-biseccion">Límite superior:</label>
                    <input type="number" id="limite-superior-biseccion" name="Xd" step="any" asp-for="Xd" />
                    <span asp-validation-for="Xd" class="text-danger"></span>

                    <label for="tolerancia-biseccion">Tolerancia:</label>
                    <input type="number" id="tolerancia-biseccion" name="Tolerancia" step="any" asp-for="Tolerancia" />
                    <span asp-validation-for="Tolerancia" class="text-danger"></span>

                    <label for="iteraciones-biseccion">Iteraciones máximas:</label>
                    <input type="number" id="iteraciones-biseccion" name="Iteraciones" asp-for="Iteraciones" />
                    <span asp-validation-for="Iteraciones" class="text-danger"></span>

                    <button type="submit">Calcular</button>
                </form>


            </div>
        </div>
        <div class="applet-container" style="display: block">
            <div class="applet-graph" id="applet_container"></div>
            <div class="resultado">
                @if (Model != null)  // Solo si ya se calculó
                {

                    <label>Raíz aproximada: @Model.Raiz </label>
                    <label>Iteraciones: @Model.Iteraciones</label>
                }
            </div>
        </div>

    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script src="https://www.geogebra.org/apps/deployggb.js"></script>
<script src="~/js/GeoGebra.js"></script>
